{
    "version": "0.2.0",
    "configurations": [
      {
        "type": "node",
        "request": "launch",
        "name": "Debug Next.js Dev",
        "runtimeExecutable": "node",
        "runtimeArgs": [
          "--inspect-brk",
          "./node_modules/next/dist/bin/next",
          "dev"
        ],
        "port": 9229,
        "console": "integratedTerminal",
        "internalConsoleOptions": "neverOpen",
        "skipFiles": ["<node_internals>/**"]
      }
    ]
  }
  